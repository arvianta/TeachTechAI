<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.changepassword.ChangePasswordFragment">
    <ImageView
        android:id="@+id/discover_background"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/background_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/profile_tvProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Ubah Password" />
    <TextView
        android:id="@+id/cp_textView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="13sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discover_background"
        android:text="Kata Sandi yang baru harus berbeda dengan kata sandi Anda yang sekarang" />
    <EditText
        android:id="@+id/cp_oldPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="12dp"
        android:inputType="textPassword"
        android:hint="Kata Sandi Lama"
        app:layout_constraintTop_toBottomOf="@id/cp_textView"
        android:background="@drawable/custom_inputtext"/>
    <EditText
        android:id="@+id/cp_newPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="12dp"
        android:inputType="textPassword"
        android:hint="Kata Sandi Baru"
        app:layout_constraintTop_toBottomOf="@id/cp_oldPassword"
        android:background="@drawable/custom_inputtext"/>

    <Button
        android:id="@+id/edit_buttonSave"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:text="Simpan"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cp_newPassword"
        android:background="@drawable/button_shape"/>
</androidx.constraintlayout.widget.ConstraintLayout>