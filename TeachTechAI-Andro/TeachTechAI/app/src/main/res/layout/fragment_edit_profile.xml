<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editProfileFragment"
    tools:context=".view.profile.ProfileFragment">

    <ImageView
        android:id="@+id/discover_background"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:background="@drawable/background_dashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/profile_tvProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Edit Profil" />
    <ImageView
        android:id="@+id/edit_profile"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/user_blank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_tvProfil"/>

    <ImageButton
        android:id="@+id/edit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_camera"
        android:padding="6dp"
        android:src="@drawable/baseline_camera_alt_24"
        app:layout_constraintEnd_toEndOf="@id/edit_profile"
        app:layout_constraintBottom_toBottomOf="@id/edit_profile" />
    <androidx.cardview.widget.CardView
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/discover_background"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="6dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="10sp"
                android:text="Nama"/>
            <EditText
                android:id="@+id/edit_name"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:padding="8dp"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:backgroundTint="@color/edit_text_state"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:minHeight="40dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_1"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="6dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="10sp"
                android:text="Asal Instansi"/>
            <EditText
                android:id="@+id/edit_asalInstansi"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:minHeight="40dp"
                android:padding="8dp"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:backgroundTint="@color/edit_text_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_2"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="6dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="10sp"
                android:text="Tanggal Lahir"/>
            <EditText
                android:id="@+id/edit_tanggalLahir"
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:minHeight="40dp"
                android:padding="8dp"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:backgroundTint="@color/edit_text_state"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/edit_buttonSave"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:text="Simpan"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_3"
        android:background="@drawable/button_shape"/>
</androidx.constraintlayout.widget.ConstraintLayout>